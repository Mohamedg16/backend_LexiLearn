# Server Configuration
NODE_ENV=development
PORT=5000

# Database Configuration
# For local MongoDB:
MONGODB_URI=mongodb://localhost:27017/educational-platform

# For MongoDB Atlas (recommended):
# MONGODB_URI=mongodb+srv://<username>:<password>@cluster.mongodb.net/educational-platform?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_change_this_in_production_min_32_characters_long
JWT_REFRESH_SECRET=your_refresh_token_secret_here_change_in_production_min_32_chars_long
JWT_EXPIRE=15m
JWT_REFRESH_EXPIRE=7d

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# Email Configuration (Optional - for Nodemailer)
# Gmail example:
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password

# Other SMTP providers:
# Outlook: smtp-mail.outlook.com, port 587
# Yahoo: smtp.mail.yahoo.com, port 587
# SendGrid: smtp.sendgrid.net, port 587

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

